const db = require('../database');

const user = {
  getById: function(id, callback) {
    return db.query('select username,password from user where username=?', [id], callback);
  },
  getAll: function(callback) {
    return db.query('select * from user', callback);
  },
  add: function(user, callback) {
    return db.query(
      'insert into user (username,password) values(?,?)',
      [user.username, user.password],
      callback
    );
  },
  //käyttäjä poistetaan osoitteesta localhost:3001/users/*
  //tähden tilalle tulee käyttäjänimi
  delete: function(id, callback) {
    return db.query('delete from user where username=?', [id], callback);
  },
  update: function(id, user, callback) {
    return db.query(
      'update user set username=?, password=? where iduser=?',
      [user.username, user.password, id],
      callback
    );
  }
};
module.exports = user;